<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <title>{{ title }}</title>
  <style>
    :root {
      --bg: #f6f6f6;
      --card: #ffffff;
      --text: #111;
      --muted: #666;
      --border: #e9e9e9;
      --shadow: 0 1px 0 rgba(0,0,0,0.03);
      --radius: 16px;
    }

    body {
      margin: 0;
      background: var(--bg);
      color: var(--text);
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Inter, Arial, sans-serif;
    }

    .wrap {
      max-width: 980px;
      margin: 0 auto;
      padding: 28px 16px 52px;
    }

    .top {
      display: flex;
      align-items: flex-end;
      justify-content: space-between;
      gap: 14px;
      margin-bottom: 18px;
    }

    h1 {
      font-size: 26px;
      margin: 0 0 6px;
      letter-spacing: 0.2px;
    }

    .meta {
      font-size: 13px;
      color: #555;
      margin: 0;
      line-height: 1.35;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 14px;
    }

    @media (max-width: 760px) {
      .top { flex-direction: column; align-items: flex-start; }
      .grid { grid-template-columns: 1fr; }
    }

    .card {
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      overflow: hidden;
      box-shadow: var(--shadow);
      display: flex;
      flex-direction: column;
      min-height: 100%;
    }

    .card.noimg .pad { padding-top: 16px; }

    .img {
      width: 100%;
      height: 190px;
      background: #eee;
      object-fit: cover;
      display: block;
    }

    .pad {
      padding: 14px 14px 16px;
      display: flex;
      flex-direction: column;
      gap: 10px;
      flex: 1;
    }

    .row {
      display: flex;
      justify-content: space-between;
      align-items: baseline;
      gap: 10px;
    }

    .name {
      font-size: 16px;
      font-weight: 750;
      margin: 0;
      line-height: 1.15;
    }

    .score {
      font-size: 12px;
      border: 1px solid #e6e6e6;
      border-radius: 999px;
      padding: 2px 10px;
      color: #111;
      background: #fafafa;
      white-space: nowrap;
    }

    .tags {
      font-size: 12px;
      color: var(--muted);
      margin: 0;
      line-height: 1.35;
    }

    .why {
      font-size: 13px;
      line-height: 1.4;
      margin: 0;
      color: #222;
    }

    .tip {
      font-size: 12px;
      margin: 0;
      color: #333;
      line-height: 1.35;
    }

    .btns {
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
      margin-top: auto;
      padding-top: 2px;
    }

    .btn {
      display: inline-block;
      font-size: 12px;
      padding: 9px 11px;
      border-radius: 11px;
      border: 1px solid #e6e6e6;
      text-decoration: none;
      color: #111;
      background: #fff;
    }

    .btn.primary {
      background: #111;
      color: #fff;
      border-color: #111;
    }

    .sources {
      margin-top: 18px;
      font-size: 12px;
      color: var(--muted);
      line-height: 1.5;
    }

    a { color: inherit; }
  </style>
</head>

<body>
  <div class="wrap">
    <div class="top">
      <div>
        <h1>{{ title }}</h1>
        <p class="meta">Period: {{ period_label }} · Generated: {{ generated_at }}</p>
      </div>
    </div>

    <div class="grid">
      {% for r in restaurants %}
      <div class="card {% if not r.image_url %}noimg{% endif %}">
        {% if r.image_url %}
          <img class="img" src="{{ r.image_url }}" alt="{{ r.name }}">
        {% endif %}

        <div class="pad">
          <div class="row">
            <p class="name">{{ loop.index }}. {{ r.name }}</p>
            <span class="score">Heat {{ r.heat_score }}</span>
          </div>

          <p class="tags">
            {{ r.neighborhood or "NYC" }}
            {% if r.cuisine %} · {{ r.cuisine }}{% endif %}
            {% if r.sources %} · {{ ", ".join(r.sources) }}{% endif %}
          </p>

          {% if r.why_hot %}
            <p class="why">{{ r.why_hot }}</p>
          {% endif %}

          <p class="tip"><strong>Reservations:</strong> {{ r.res_difficulty }} — {{ r.booking_tip }}</p>

          <div class="btns">
            {% if r.url %}
              <a class="btn primary" href="{{ r.url }}">Reserve / Details</a>
            {% endif %}

            {% if r.sources %}
              {% for s in r.sources %}
                {% if s == "Resy" %}
                  <a class="btn" href="https://blog.resy.com/the-hit-list/nyc-restaurants/">Source: Resy</a>
                {% elif s == "Eater" %}
                  <a class="btn" href="https://ny.eater.com/maps/best-new-nyc-restaurants-heatmap">Source: Eater</a>
                {% endif %}
              {% endfor %}
            {% endif %}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>

    <div class="sources">
      Sources:
      {% for s in sources %}
        <a href="{{ s.url }}">{{ s.name }}</a>{% if not loop.last %} · {% endif %}
      {% endfor %}
    </div>
  </div>
</body>
</html>
